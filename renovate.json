{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchPaths": ["^resources/gitops-config/main.tf$"],
      "enabled": true
    },
    {
      "matchManagers": ["yaml"],
      "matchPaths": ["^resources/gitops-config/sync-app/templates/.*\\.ya?ml$"],
      "enabled": true
    }
  ]
}
