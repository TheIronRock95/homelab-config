{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["resources/gitops-config/sync-app/templates/argocd.yaml"],
      "matchStrings": [
        "repoURL:\\s*(?<repoUrl>https://argoproj.github.io/argo-helm/)\\s*chart:\\s*(?<chart>argo-cd)\\s*targetRevision:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "{{chart}}",
      "currentValueTemplate": "{{currentValue}}"
    },
    {
      "fileMatch": ["resources/gitops-config/sync-app/templates/argocd-apps.yaml"],
