{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchPaths": ["^resources/gitops-config/main.tf$"],
      "enabled": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^resources/gitops-config/sync-app/templates/.*\\.ya?ml$"],
      "matchStrings": [
        "chart:\\s*(?<depName>\\S+)\\s*.*?targetRevision:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "helm",
      "lookupNameTemplate": "argo-helm/{{depName}}"
    }
  ]
}
