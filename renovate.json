{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchPaths": ["^resources/gitops-config/main.tf$"],
      "enabled": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^resources/gitops-config/sync-app/templates/.*\\.ya?ml$"],
      "matchStrings": [
        "repoURL:\\s*https://argoproj.github.io/argo-helm/\\s*chart:\\s*(?<depName>argo-cd)\\s*targetRevision:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "{{depName}}",
      "currentValueTemplate": "{{currentValue}}"
    },
    {
      "fileMatch": ["^resources/gitops-config/sync-app/templates/.*\\.ya?ml$"],
      "matchStrings": [
        "repoURL:\\s*https://charts.jetstack.io\\s*chart:\\s*(?<depName>cert-manager)\\s*targetRevision:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
