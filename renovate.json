{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,
  "regexManagers": [
    {
      "fileMatch": ["^resources/gitops-config/sync-app/templates/.*\\.ya?ml$"],
      "matchStrings": [
        "repoURL:\\s*(?<registry>\\S+)\\s*chart:\\s*(?<depName>\\S+)\\s*targetRevision:\\s*(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "{{depName}}"
    }
  ],
  "packageRules": [
    {
      "matchFiles": ["^resources/gitops-config/main.tf$"],
      "managers": ["terraform"],
      "enabled": true
    }
  ]
}